<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" prefHeight="487.0" prefWidth="757.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.StoreController">
    <top>
        <fx:include source="../Reusable/Navbar.fxml" />
    </top>
    <center>

        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" prefHeight="307.0" prefWidth="699.0">
                <children> <!-- This will be the dynamic content area -->
                    <!-- Main content area for articles -->
                    <ScrollPane fitToWidth="true" prefHeight="246.0" prefWidth="800.0">
                        <VBox fx:id="articlesContainer" spacing="10">
                        </VBox>
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                    </ScrollPane>

                    <!-- Sidebar for categories and other information -->
                    <ScrollPane fitToWidth="true" prefHeight="307.0" prefWidth="92.0" style="-fx-background-color: #f5f5f5;">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Categories" />
                        <ListView fx:id="categoryList" prefHeight="400.0" prefWidth="74.0" />

                    </ScrollPane>
                </children>
            </HBox>
        </StackPane>
    </center>
    <bottom>
        <VBox alignment="BASELINE_RIGHT">
            <HBox>
                <Button onAction="#handleCommanderButtonClick" text="Commander" />
                <Button text="Show Command History" onAction="#handleShowCommandHistory" />
            </HBox>
            <Label fx:id="totalPriceLabel" style="-fx-font-weight: bold;">
            <font>
               <Font size="18.0" />
            </font></Label>
            <fx:include source="../Reusable/Footer.fxml" />
        </VBox>
    </bottom>

    <right>
        <VBox fx:id="panierItemsContainer" spacing="10" />
    </right>
</BorderPane>
