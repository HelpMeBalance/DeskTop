<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>



<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.RegisterController"
      stylesheets="@../../css/register.css"
      fillHeight="true">

    <!-- Container for the registration form -->
    <VBox styleClass="form-container" spacing="20" alignment="TOP_CENTER" minWidth="600" prefWidth="600">
        <Text styleClass="title-text">Sign up</Text>

        <HBox spacing="15" alignment="CENTER">
            <TextField fx:id="firstnameField" promptText="Your first name" styleClass="text-field"/>
            <TextField fx:id="lastnameField" promptText="Your last name" styleClass="text-field"/>
        </HBox>

        <TextField fx:id="emailField" promptText="Your email" styleClass="text-field"/>

        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field"/>
        <PasswordField fx:id="repeatPasswordField" promptText="Repeat Password" styleClass="text-field"/>

        <CheckBox fx:id="notARobotCheck" text="I'm not a robot" styleClass="check-box"/>

        <HBox alignment="CENTER_LEFT">
            <CheckBox fx:id="termsCheckBox" styleClass="check-box"/>
            <Text text="I agree all statements in " styleClass="normal-text"/>
            <Hyperlink text="Terms of service" styleClass="hyperlink-text"/>
        </HBox>
        <Label fx:id="errorMessage" textFill="red"/>

        <Button text="Register" fx:id="registerButton" styleClass="register-button" onAction="#handleRegister"/>

        <HBox alignment="CENTER">
            <Text text="Already have an account?" styleClass="normal-text"/>
            <Hyperlink text="Sign in" onAction="#handleSignIn"/>
        </HBox>
    </VBox>

    <!-- Container for the image -->
    <VBox fx:id="imageContainer" styleClass="image-container" minWidth="600" prefWidth="600">
        <!-- Background image set via CSS -->
        <ImageView fitWidth="400" fitHeight="200" preserveRatio="true">
            <Image url="@../../assets/register.jpg" />
        </ImageView>
    </VBox>
</HBox>
