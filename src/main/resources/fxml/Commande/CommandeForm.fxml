<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER_LEFT" fillWidth="false" prefHeight="354.0" prefWidth="419.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.CommandeController">

    <!-- Logo -->
    <ImageView>
        <image>
            <Image url="@/assets/logo.png" />
        </image>
    </ImageView>

    <Label text="Enter Your Address:"/>
    <TextField fx:id="addressField"/>

    <Label text="Select Payment Method (CARD or CASH):"/>
    <TextField fx:id="paymentMethodField"/>

    <Label text="Enter Sale Code (-20%):"/>
    <TextField fx:id="saleCodeField"/>

    <Button onAction="#handleConfirmOrder" text="Confirm Order"/>
</VBox>
