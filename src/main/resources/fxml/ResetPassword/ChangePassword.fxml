<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controllers.ChangePasswordController" alignment="CENTER" spacing="15">
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>
    <Text text="Change Password" styleClass="heading-text"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password" />
    <PasswordField fx:id="confirmNewPasswordField" promptText="Confirm New Password" />
    <Button fx:id="changePasswordButton" text="Change Password" onAction="#handleChangePassword"/>
</VBox>
